---

- name: Update/create FortiADC resources.
  hosts: all
  become: false
  gather_facts: false
  connection: local
  vars:
  # load-balance real-server
    fad_slb_real_servers:
    # minimum example
    - name: svr-01.site-01.ndkprd.com
      address: 10.10.10.1
    # complete example
    - name: svr-02.site-01.ndkprd.com
      address: 10.10.10.2
      address6: "::"
      instance: ""
      sdn_address_private: disable
      sdn_connector: disable
      server_type: static
      status: enable
      type: ip
      fqdn: ""

  roles:
    - ndkprd.fad_slb_real_server
